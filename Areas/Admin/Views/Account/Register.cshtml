@using Microsoft.AspNet.Identity.EntityFramework
@model PCShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Thêm tài khoản mới";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý quyền</h1>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thêm quyền mới</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false)
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Họ và tên</label>
                                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Phân quyền</label>
                                @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList,"Chọn quyền", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Thêm mới</button>
                            </div>
                        }
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
