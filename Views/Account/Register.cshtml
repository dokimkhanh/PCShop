@model PCShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<div class="container" style="margin-top: 180px">
    <div class="row">
        <div class="col-md-12">
            <h2 id="title">@ViewBag.Title.</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="">

                    <div class="form-group">
                        <label class="col-md-2 col-form-label">Tên đăng nhập</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 col-form-label">Email</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 col-form-label">Số điện thoại</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 col-form-label">Mật khẩu</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 col-form-label">Nhập lại mật khẩu</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 col-form-label">Họ và tên</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        </div>
                    </div>

                    @Html.TextBoxFor(m => m.Role, new { @Value = "361a9fa5-0ec3-4154-ba7f-c25f858031bb", @type = "hidden" })

                    <div class="col-md-10">
                        <input type="submit" value="Register" class="btn btn-primary btn-block" />
                    </div>
                </div>
            }
        </div>
    </div>

</div>

<div class="newsletter">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center">
                    <h4>Đăng ký</h4>
                    <p>Đăng kí để quản lý đơn hàng dễ dàng hơn</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
